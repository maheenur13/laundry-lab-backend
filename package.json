{
  "name": "laundrybd-backend",
  "version": "1.0.0",
  "description": "LaundryBD Backend API - NestJS REST API for online laundry service",
  "main": "dist/main.js",
  "scripts": {
    "build": "nest build",
    "postinstall": "npm run build",
    "start": "node dist/main",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "script:add-delivery": "ts-node -r tsconfig-paths/register scripts/add-delivery-person.ts",
    "script:assign-order": "ts-node -r tsconfig-paths/register scripts/assign-order.ts",
    "script:get-delivery": "ts-node -r tsconfig-paths/register scripts/get-delivery-personnel.ts"
  },
  "keywords": [
    "nestjs",
    "laundry",
    "api",
    "bangladesh"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@nestjs/common": "^11.1.12",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.12",
    "@nestjs/jwt": "^11.0.2",
    "@nestjs/mongoose": "^11.0.4",
    "@nestjs/passport": "^11.0.5",
    "@nestjs/platform-express": "^11.1.12",
    "@nestjs/swagger": "^11.2.5",
    "@nestjs/throttler": "^6.5.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.3",
    "mongoose": "^9.1.4",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.16",
    "@nestjs/schematics": "^11.0.9",
    "@nestjs/testing": "^11.1.12",
    "@types/express": "^5.0.6",
    "@types/node": "^25.0.9",
    "@types/passport-jwt": "^4.0.1",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3"
  },
  "packageManager": "pnpm@10.20.0"
}
